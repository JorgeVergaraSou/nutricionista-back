{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./src",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },

    "strict": true,
    "strictPropertyInitialization": false, // üëà agregado
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "removeComments": true,
    "sourceMap": true,

    // ‚ö†Ô∏è Comentar o mantener seg√∫n versi√≥n
     "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
